template header
    name
    priority
    activationGroup
    agendaGroup
    dateStart
    dateEnd
    status
    expression
    eligible

package gr.spring.drools.poc;

template "@{name}"

import gr.spring.drools.poc.model.rules.MissionEvaluation;

rule "@{name}_@{row.rowNumber}"
 salience @{priority}
 activation-group "@{activationGroup}"
 agenda-group "@{agendaGroup}"
 date-effective "@{dateStart}"
 date-expires "@{dateEnd}"
 when
  $gpu : MissionEvaluation(@{expression})
 then
  $gpu.setNumOfValidatedRules($gpu.getNumOfValidatedRules() + 1);
end

end template
